{% extends 'layout.html.twig' %}

{% block content %}
<div class="logo-container">
  <img class="logo" style="width: 100px" src="assets/images/logo.png">
</div>
<div class="card glass home">
  <div class="brand-logo">
  </div>
        <p> Les meilleurs professeurs sont ceux que vous choisissez ! </p>
  <div class="inputs glass">
    <form method="post">
    <section id="header-container">
    <label for="instrument">Instrument</label>
    <select id="instrument"="instrument" placeholder="example@test.com" />
    {% for user in users %}
        <option name={{user.instrument}} value={{user.user}}>{{user.instrument}}</option>
    {% endfor %}
    </select>
    <br>
    <label for="address" >Address</label>
    <select id="address" name="address" placeholder="6 rue de saint brice" />
    {% for user in users %}
        <option name={{user.address}} value={{user.address}}>{{user.adress}}</option>
    {% endfor %}
    </select>
    <br>
    <div class="element"></div>
    <button id="search" type="submit">Chercher</button>
    </section>
  </div>
</div>

</form>
 {% endblock %}
