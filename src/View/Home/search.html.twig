{% extends 'layout.html.twig' %}

{% block content %}
<div class="logo-container search-logo">
    <a href="/"><img class="logo" style="width: 100px" src="assets/images/logo.png"></a>
</div>
    <div class="glass search all-card-container">
        {% for user in users %}
        <a href="/profile?id={{user.id}}">
        <div class="wrapper">
    <div class="img-area">
      <div class="inner-area">
        <img src="{{user.photo}}" alt="">
      </div>
    </div>
    <div class="icon arrow"><i class="fas fa-arrow-left"></i></div>
    <div class="icon dots"><i class="fas fa-ellipsis-v"></i></div>
    <div class="name">{{user.name}}</div>
    <div class="about">Professeur de {{user.instrument_name}}</div>
    <div class="social-icons">
    </div>
    <div class="buttons">
      <button>Contacter</button>
      <button>Voir le profil</button>
    </div>
    <div class="social-share">
      <div class="row">
        <span>⭐️ 5.0 (65)</span>
      </div>

      <div class="row">
        <i class="fas fa-share"></i>
        <span>{{user.prices}} € / h</span>
      </div>
    </div>
  </div>
        {% endfor %}
        </a>
    </div>
    
  
 {% endblock %}
